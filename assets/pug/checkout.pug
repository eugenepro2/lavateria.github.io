extends include/layout.pug

block content
	section.checkout
		.breadcrumb
			.container
				.row.middle-xs.center-xs
					.col-xs-12
						h2 Оформление заказа
		.container.checkout__container
			.row
				.checkout__step.checkout__step--1
					.col-xs-12
						.checkout__item.checkout__item--1.active
							span 1
							.line
							h3 Состав заказа
					.row.checkout__row
						.col-xs-12
							.checkout__step--1__block
								.row
									.col-sm-4.checkout__step--1__block__nth(data-price="80")
										h3 Одежда<br>и постельное белье
											.tooltip
												.tooltip__hover i am tooltip
										h4 Рубашки, футболки, юбки, брюки,<br>наволочки и т.д.
										.row
											.col-sm-4
												.checkout__step--1__block__counter.cart__count
													span 0
													i вещей
											.col-sm-8
												.checkout__step--1__block__onsum на сумму
												.checkout__step--1__block__sum.cart__sum.cart__sum--1
													span 0
													i.icon-ruble
													.checkout__step--1__block__sum__span 80 р. за вещь
											.col-xs-8
												.checkout__step--1__block__calc
													.flex.between-xs.middle-xs.calc
														.add.add-1(data-action="substract")
															span
															i -
														input(type="number" data-action="keyup" data-price="80" value="0" min="0" max="99" onkeypress="return isNumeric(event)" oninput="maxLengthCheck(this)" placeholder="0")
														.add(data-action="add")
															span
															i +
									.col-sm-4.checkout__step--1__block__nth(data-price="100")
										h3 Крупные вещи
											.tooltip
												.tooltip__hover i am tooltip
										h4 Пуховики, куртки, одеяла,<br>пледы и т.д.
										.row
											.col-sm-4
												.checkout__step--1__block__counter.cart__count
													span 19
													i вещь
											.col-sm-8
												.checkout__step--1__block__onsum на сумму
												.checkout__step--1__block__sum.cart__sum.cart__sum--2
													span 100
													i.icon-ruble
													.checkout__step--1__block__sum__span 100 р. за вещь
											.col-xs-8
												.checkout__step--1__block__calc
													.flex.between-xs.middle-xs.calc
														.add(data-action="substract")
															span
															i -
														input(type="number" data-action="keyup" data-price="100" value="19" min="0" max="99" onkeypress="return isNumeric(event)" oninput="maxLengthCheck(this)" placeholder="0")
														.add(data-action="add")
															span
															i +
									.col-sm-4.checkout__step--1__block__nth
										h3 Доставка
											.tooltip
												.tooltip__hover i am tooltip
										h4.delivery В пределах КАД
										.row
											.col-xs-12
												.checkout__step--1__block__onsum на сумму
												.checkout__step--1__block__sum#cart-delivery
													span#cart-delivery-sum 300
													i.icon-ruble
													.checkout__step--1__block__sum__span#cart-delivery-sum-free от <span>2000</span> р. - бесплатно
											.col-xs-12
												.checkbox
													.checkbox__block
													input#checkbox-delivery-1(type="checkbox" checked name="delivery" data-delivery-price="300" data-delivery-price-free="2000")
													label.label(for="checkbox-delivery-1")
													label.label-for.label-checkout(for="checkbox-delivery-1") В пределах КАД
												.checkbox
													.checkbox__block
													input#checkbox-delivery-2(type="checkbox" name="delivery" data-delivery-price="500" data-delivery-price-free="3000")
													label.label(for="checkbox-delivery-2")
													label.label-for.label-checkout(for="checkbox-delivery-2") До 30 км от КАД
								.row
									.col-xs-12
										h3.checkout__step--1__block__infinity Дополнительно к корзине белья Вы можете сдать неограниченное<br>количество нижнего белья.
									.col-sm-6
										a.checkout__step--1__block__change Изменить параметры заказа
									.col-sm-6.end-sm
						.col-xs-12
							hr
						.col-sm-9
							.checkout__step--1__delivery--notification.delivery--notification.flex.center-xs.middle-xs
								span ! 
								| Добавьте вещей на 2000 руб. и доставка станет бесплатной
						.col-sm-3
							.checkout__step--1__sum--1.total
								.checkout__step--1__sum--1__span Итого:
								span 0
								i.icon-ruble
				.checkout__step.checkout__step--2
					.col-xs-12
						.checkout__item.checkout__item--2
							span 2
							.line
							h3 Уточните, пожалуйста, место и дату приезда курьера
							p Заберем, постираем, высушим, погладим и доставим<br>обратно в течении 48 часов
					.row.checkout__row
						.col-xs-12
							.checkout__step--2__block
								.row
									.col-sm-7
										.required
											label(for="adress") Адрес
											input#adress(type="text" placeholder="улица, дом/корпус, строение, квартира ")
											span *
										label(for="comment") Комментарий к заказу 
										textarea#comment(placeholder="забрать у консьержа, позвонить в домофон... ")
									.col-sm-5
										.required
											label(for="date") Введите дату забора 
											input#date(type="text" placeholder="Например: 15.05.2017")
											span *
									.col-xs-12
										p Наш менеджер свяжется с Вами и согласует удобное для Вас время забора белья после оформления заказа. 
				.checkout__step.checkout__step--3
					.col-xs-12
						.checkout__item.checkout__item--3
							span 3
							.line
							h3 Введите контактную информацию
							a(href="#") У меня уже есть аккаунт
					.row.checkout__row
						.col-xs-12
							.checkout__step--2__block
								.row
									.col-sm-6
										.required
											input#name(type="text" required placeholder="Имя")
											span *
										.required
											input#tel(type="text" required placeholder="Телефон")
											span *
									.col-sm-6
										input(type="text" placeholder="Фамилия")
										input(type="text" placeholder="E-mail")
									.col-xs-12
										p *Обязательное поле для заполнения
				.checkout__step.checkout__step--4
					.col-xs-12
						.checkout__item.checkout__item--4
							span 4
							.line
							h3 Выберите способ оплаты
					.row.checkout__row
						.col-xs-12
							.checkout__step--2__block
								.row
									.radio
										.radio__block
										input#radio-1(type="radio" name="payment")
										label(for="radio-1").label
										label(for="radio-1").label-for
											h3 Банковской картой курьеру при получении
											p Оплатите покупку банковской картой при получении.<br>Оплата осуществляется через мобильный терминал PayMe, без комиссии.
									.radio
										.radio__block
										input#radio-2(type="radio" name="payment")
										label(for="radio-2").label
										label(for="radio-2").label-for
											h3 Наличными курьеру при получении
									.radio
										.radio__block
										input#radio-3(type="radio" name="payment")
										label(for="radio-3").label
										label(for="radio-3").label-for
											h3 Онлайн оплата банковской картой на сайте
											img(src="img/mastercard.svg", alt="")
											img(src="img/visa.svg", alt="")
						.col-xs-12
							.checkbox
								.checkbox__block
								input#rules(type="checkbox" checked name="rul")
								label.label(for="rules")
								label.label-for(for="rules") Я прочитал и согласен 
									a(href="#") с условиями оформления и оплаты заказов
									|  на сайте Lavateria
				.col-xs-12
					hr.hr-2
				.col-sm-6
					.checkout__sum--2.total.checkout__sum.flex.end-sm.bottom-xs
						.checkout__sum--2__span Итого к оплате:
						span 0
						i.icon-ruble
				.col-sm-6
					a.btn.btn--checkout(href="#")
						i Оформить заказ
		.checkout__sum__block
			.checkout__sum--3.total
				.container
					.row
						.col-xs-12.center-xs.middle-xs.flex
							.checkout__sum--3__span Сумма Вашего заказа:  
							span 0 
							i.icon-ruble
										
