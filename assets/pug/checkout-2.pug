extends include/layout.pug

block content
	section.checkout
		.breadcrumb
			.container
				.row.middle-xs.center-xs
					.col-xs-12
						h2 Оформление заказа
		.container.checkout__container
			.row
				.checkout__step.checkout__step--1
					.col-xs-12
						.checkout__item.checkout__item--1.active
							span 1
							.line
							h3 Состав заказ (абонемент)
					.row.checkout__row
						.col-xs-12
							.checkout__step--1__block.checkout__step--1--subscription
								.checkout__step--1--subscription__header
									h3 Абонемент по количеству корзин 
										.tooltip
											.tooltip__hover Абонемент вступает в силу<br>с первой доставки корзины.
								.checkout__step--1--subscription__block
									.row
										.checkout__step--1--subscription__block--1
											.row
												h4 Количество корзин<br>в месяц:
												.checkout__step--1--subscription__block__counter
													span 4
													i кор
										.checkout__step--1--subscription__block--2
											.row
												h4 Время действия<br>абонемента:
												.checkout__step--1--subscription__block__counter
													span 4
													i мес
										.col-sm-3.end-sm.checkout__step--1--subscription__block__total
											.row
												.col-sm-5
													h5 Сумма:
												.col-sm-7.checkout__step--1--subscription__block__total__sum
													p
														span 4500
														i.icon-ruble
													.checkout__step--1--subscription__block__total__span 500 р. / корзина 
									.row
										.col-sm-9
											.checkout__step--1--subscription__block__select
												.row
													.col-sm-6
														select.blue.select-first
															option(data-ratio="1" data-value="1" data-price="500") 1 корзина
															option(data-ratio="0.95" data-value="2" data-price="500") 2 корзины
													.col-sm-6
														select.blue.select-second
															option(data-ratio-month="1" data-value-month="1") 1 месяц
															option(data-ratio-month="0.95" data-value-month="2") 2 месяца
									.row
										.col-xs-12.center-xs
											a.checkout__step--1__block__change--2 Изменить параметры абонемента
										.col-sm-3
						.col-xs-12
							hr
						.col-sm-12
							.checkout__step--1__sum--1.total.flex.end-sm.bottom-xs
								.checkout__step--1__sum--1__span Итого:
								span 4500
								i.icon-ruble
				.checkout__step.checkout__step--2
					.col-xs-12
						.checkout__item.checkout__item--2
							span 2
							.line
							h3 Уточните, пожалуйста, место и дату приезда курьера
							p Заберем, постираем, высушим, погладим и доставим<br>обратно в течении 48 часов
					.row.checkout__row
						.col-xs-12
							.checkout__step--2__block
								.row
									.col-sm-7
										.required
											label(for="adress") Адрес
											input#adress(type="text" required placeholder="улица, дом/корпус, строение, квартира ")
											span *
										label(for="comment") Комментарий к заказу 
										textarea#comment(placeholder="забрать у консьержа, позвонить в домофон... ")
									.col-sm-5
										.required
											label(for="date") Выберите дату доставки 1-й корзины
											input#date(type="text" required placeholder="Например: 15.05.2017")
											span *
									.col-xs-12
										p Наш менеджер свяжется с Вами и согласует удобное для Вас время забора белья после оформления заказа. 
				.checkout__step.checkout__step--3
					.col-xs-12
						.checkout__item.checkout__item--3
							span 3
							.line
							h3 Введите контактную информацию
							a(href="#") У меня уже есть аккаунт
					.row.checkout__row
						.col-xs-12
							.checkout__step--2__block
								.row
									.col-sm-6
										.required
											input#name(type="text" required placeholder="Имя")
											span *
										.required
											input#tel(type="text" required placeholder="Телефон")
											span *
									.col-sm-6
										input(type="text" placeholder="Фамилия")
										input(type="text" placeholder="E-mail")
									.col-xs-12
										p *Обязательное поле для заполнения
				.checkout__step.checkout__step--4
					.col-xs-12
						.checkout__item.checkout__item--4
							span 4
							.line
							h3 Выберите способ оплаты
					.row.checkout__row
						.col-xs-12
							.checkout__step--2__block
								.row
									.radio
										.radio__block
										input#radio-1(type="radio" name="payment")
										label(for="radio-1").label
										label(for="radio-1").label-for
											h3 Банковской картой курьеру при получении
											p Оплатите покупку банковской картой при получении.<br>Оплата осуществляется через мобильный терминал PayMe, без комиссии.
									.radio
										.radio__block
										input#radio-2(type="radio" name="payment")
										label(for="radio-2").label
										label(for="radio-2").label-for
											h3 Наличными курьеру при получении
									.radio
										.radio__block
										input#radio-3(type="radio" name="payment")
										label(for="radio-3").label
										label(for="radio-3").label-for
											h3 Онлайн оплата банковской картой на сайте
											img(src="img/mastercard.svg", alt="")
											img(src="img/visa.svg", alt="")
						.col-xs-12
							.checkbox
								.checkbox__block
								input#rules(type="checkbox" checked name="rul")
								label.label(for="rules")
								label.label-for(for="rules") Я прочитал и согласен 
									a(href="#") с условиями оформления и оплаты заказов
									|  на сайте Lavateria
				.col-xs-12
					hr.hr-2
				.col-sm-6
					.checkout__sum--2.total.checkout__sum.flex.end-sm.bottom-xs
						.checkout__sum--2__span Итого к оплате:
						span 0
						i.icon-ruble
				.col-sm-6
					a.btn.btn--checkout(href="#")
						i Оформить заказ
		.checkout__sum__block
			.checkout__sum--3.total
				.container
					.row
						.col-xs-12.center-xs.middle-xs.flex
							.checkout__sum--3__span Сумма Вашего заказа:  
							span 0 
							i.icon-ruble
										
